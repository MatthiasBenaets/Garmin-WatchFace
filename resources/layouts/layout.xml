<layout id="WatchFace">
    <drawable class="Background" />

    <label id="TempText" x="33%" y="13%" text="TEMP" font="@Fonts.customLabel" color="Graphics.COLOR_LT_GRAY" justification="Graphics.TEXT_JUSTIFY_CENTER" />
    <label id="TempLabel" x="36%" y="16%" font="@Fonts.custom24" justification="Graphics.TEXT_JUSTIFY_LEFT" />
    <label id="TempFeelLabel" x="36%" y="23%" font="@Fonts.custom24" color="Graphics.COLOR_LT_GRAY" justification="Graphics.TEXT_JUSTIFY_LEFT" />

    <label id="WindText" x="63%" y="13%" text="WIND" font="@Fonts.customLabel" color="Graphics.COLOR_LT_GRAY" justification="Graphics.TEXT_JUSTIFY_CENTER" />
    <label id="WindDirLabel" x="66%" y="16%" font="@Fonts.custom24" justification="Graphics.TEXT_JUSTIFY_LEFT" />
    <label id="WindSpeedLabel" x="66%" y="23%" font="@Fonts.custom24" justification="Graphics.TEXT_JUSTIFY_LEFT" />

    <label id="TimeLabel" x="center" y="30%" font="@Fonts.custom96" justification="Graphics.TEXT_JUSTIFY_CENTER" color="Graphics.COLOR_WHITE" />
    <label id="DateLabel" x="center" y="56%" font="@Fonts.custom24" justification="Graphics.TEXT_JUSTIFY_CENTER" color="Graphics.COLOR_LT_GRAY" />

    <label id="CaloriesText" x="35%" y="68%" text="CALORIES" font="@Fonts.customLabel" color="Graphics.COLOR_LT_GRAY" justification="Graphics.TEXT_JUSTIFY_CENTER" />
    <label id="CaloriesLabel" x="35%" y="70%" font="@Fonts.custom24" justification="Graphics.TEXT_JUSTIFY_CENTER" />
    <label id="StepsText" x="65%" y="68%" text="STEPS" font="@Fonts.customLabel" color="Graphics.COLOR_LT_GRAY" justification="Graphics.TEXT_JUSTIFY_CENTER" />
    <label id="StepsLabel" x="65%" y="70%" font="@Fonts.custom24" justification="Graphics.TEXT_JUSTIFY_CENTER" />

    <label id="BodyText" x="35%" y="78%" text="BODY" font="@Fonts.customLabel" color="Graphics.COLOR_LT_GRAY" justification="Graphics.TEXT_JUSTIFY_CENTER" />
    <label id="BodyLabel" x="35%" y="80%" font="@Fonts.custom24" justification="Graphics.TEXT_JUSTIFY_CENTER" />
    <label id="HeartRateText" x="65%" y="78%" text="HR" font="@Fonts.customLabel" color="Graphics.COLOR_LT_GRAY" justification="Graphics.TEXT_JUSTIFY_CENTER" />
    <label id="HeartRateLabel" x="65%" y="80%" font="@Fonts.custom24" justification="Graphics.TEXT_JUSTIFY_CENTER" />
</layout>